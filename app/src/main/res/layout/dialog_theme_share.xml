<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:drawablePadding="7dp"
        android:text="@string/theme_sites_title"
        android:textSize="19sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_public_black_24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_officialStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/official_theme_store" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_themesTK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/miui_themes_tk"
        android:textAllCaps="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_techruchi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/techruchi_com"
        android:textAllCaps="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_themeXiaomis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/miui_themes_xiaomis"
        android:textAllCaps="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_themez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/miui_themez"
        android:textAllCaps="false" />
</LinearLayout>
